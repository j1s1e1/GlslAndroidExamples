<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tutorial.glsltutorials.tutorials"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/earth"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Tell the system this app requires OpenGL ES 3.0. -->
        <uses-feature
            android:glEsVersion="0x00030000"
            android:required="true" />

        <activity
            android:name="com.tutorial.glsltutorials.tutorials.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tutorial.glsltutorials.tutorials.Tutorials"
            android:label="Tutorials"
            android:theme="@style/Theme.AppCompat" />
    </application>

</manifest>